@model IEnumerable<todo.Models.Item>

@{
    ViewBag.Title = "List of Customer Enquiries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Customer Enquiries</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reply)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <th>
            @Html.DisplayFor(modelItem => item.Reply)
        </th>
        <td>
            @Html.ActionLink("Reply", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Create New Enquiry", "Create")
</p>
